    "postcss": "7.0.27",
    "postcss-cli": "7.1.1",
    "tailwindcss": "1.4.1"
  },
  "devDependencies": {
    "fs-extra": "9.0.0",
    "http-server": "0.12.3",
    "xo": "0.30.0"
  },
  "xo": {
    "ignore": [
      "site/**/*"
    ]
  }
}
