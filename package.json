{
  "name": "@gradebook/school-configuration",
  "version": "0.0.1",
  "description": "School-specific configuration for Gradebook ",
  "repository": "https://github.com/gradebook/school-configuration",
  "author": "Vikas Potluri <vikaspotluri123.github@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "xo",
    "css": "tailwind build ./site/assets/styles.css -o site/assets/styles.min.css",
    "predev": "yarn css",
    "dev": "hs site -c-1",
    "minify": "cssnano ./site/assets/styles.min.css ./site/assets/styles.min.css"
  },
  "dependencies": {
    "autoprefixer": "10.1.0",
    "cssnano-cli": "^1.0.5",
    "js-yaml": "3.14.1",
    "postcss": "8.2.1",
    "tailwindcss": "2.0.2"
  },
  "devDependencies": {
    "@gradebook/actions-hook": "0.2.0",
    "fs-extra": "9.0.1",
    "http-server": "0.12.3",
    "xo": "0.36.1"
  },
  "xo": {
    "ignores": [
      "site/**/*",
      "dist"
    ]
  }
}
