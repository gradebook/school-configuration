{
  "name": "@gradebook/school-configuration",
  "version": "0.0.1",
  "description": "School-specific configuration for Gradebook ",
  "repository": "https://github.com/gradebook/school-configuration",
  "author": "Vikas Potluri <vikaspotluri123.github@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "xo",
    "css": "postcss site/assets/styles.css -o site/assets/styles.min.css --verbose",
    "css:dev": "yarn css --watch",
    "dev": "hs site -c-1"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "2.3.0",
    "autoprefixer": "9.8.6",
    "cssnano": "4.1.10",
    "js-yaml": "3.14.0",
    "postcss": "7.0.35",
    "postcss-cli": "7.1.2",
    "tailwindcss": "1.9.6"
  },
  "devDependencies": {
    "@gradebook/actions-hook": "0.2.0",
    "fs-extra": "9.0.1",
    "http-server": "0.12.3",
    "xo": "0.36.1"
  },
  "xo": {
    "ignore": [
      "site/**/*",
      "dist"
    ]
  }
}
